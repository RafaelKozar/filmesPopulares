<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filme_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:weightSum="10">

    <ImageView
        android:id="@+id/image_movie_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="true"
        android:scaleType="centerCrop"
        tools:src="@drawable/imgteste"
        tools:layout_editor_absoluteY="0dp"
        tool:layout_constraintRight_toRightOf="parent"
        tool:layout_constraintLeft_toLeftOf="parent"

        />


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        tool:layout_constraintTop_toBottomOf="@+id/image_movie_item"
        android:background="@color/colorGray"
        tool:layout_constraintRight_toRightOf="parent"
        tool:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/nome_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:maxLength="13"
            android:text="teste"

            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            tools:text="IntereEstelar" />

        <ImageView
            android:id="@+id/button_favoritar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            tools:src="@drawable/img_favorito" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
